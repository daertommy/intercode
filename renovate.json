{
  "labels": ["dependencies"],
  "extends": ["config:base"],
  "packageRules": [
    {
      "matchUpdateTypes": ["minor", "patch", "pin", "digest"],
      "automerge": true
    },
    {
      "matchDepTypes": ["devDependencies"],
      "automerge": true
    },
    {
      "matchPackageNames": ["mapbox-gl", "@types/mapbox-gl"],
      "allowedVersions": "< 2"
    },
    {
      "matchPackageNames": ["typescript"],
      "allowedVersions": "!4.8.4"
    }
  ],
  "postUpdateOptions": ["yarnDedupeHighest"]
}
